/* miniprogram/pages/home_center/common_panel/index.js.wxss */
.count-box {
  display: flex;
  flex-direction: row;
  align-items: baseline;
  background-color: chocolate;
}
.count-box-value {
  font-size: 100rpx;
  font-family: 'DIN Condensed';
  color: #0DB178;
}
.count-box-unit {
  color: #86898a;
  margin-left: 12rpx;
}
.count-tip {
  color: #D3D4D4;
  font-size: 28rpx;
  margin-top: -10rpx;
}
.items {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  margin-top: 48rpx;
  box-sizing: border-box;
}
.anniuitems {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  margin-top: 8rpx;
  box-sizing: border-box;
}
.item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.item-value {
  font-size: 22pt;
  font-family: 'DIN Condensed';
  color: #C7C9C9;
}
.item-label {
  color: #86898a;
  margin-top: 4pt;
}
.mode-box {
  margin-top: 72rpx;
  background-color: blue;
}
.mode-item {
  display: flex;
  flex-direction: row;
  width: 670rpx;
  height: 172rpx;
  justify-content: space-between;
  align-items: center;
  border-radius: 32rpx;
  background-color: rgba(255, 255, 255, 0.05);
  padding: 40rpx;
  box-sizing: border-box;
  margin-bottom: 24rpx;
}
.mode-item-left {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.icon {
  width: 92rpx;
  height: 92rpx;
}
.mode-item-title {
  color: rgba(255, 255, 255, 0.75);
  font-size: 16;
  font-weight: 500;
  margin-left: 50rpx;
}
.mode-item-arrow {
  color: #76787A;
  font-size: 40rpx;
}
.popupmain{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 60rpx;
}
.popupitem{
  margin-top: 24rpx;
}





.common-panel-backgroud {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
	height: 320px;
	background-color: #27c3d9;
}
.a{
  display: flex;
  flex-direction: column;
}
.common-panel-header {
  z-index: 1;
  padding-top: 72rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 750rpx;
  height: 256px;
